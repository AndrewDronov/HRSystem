@model HRSystem.ViewModels.DivisionViewModel

<p>
    <a asp-action="Create">Создать</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">

            <div class="form-group">
                <label asp-for="Filter.CreatedAt" class="control-label"></label>
                <input asp-for="Filter.CreatedAt" class="form-control" />
                <span asp-validation-for="Filter.CreatedAt" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Найти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameForInnerType((Division e) => e.Name)
            </th>
            <th>
                @Html.DisplayNameForInnerType((Division e) => e.Parent)
            </th>
            <th>
                @Html.DisplayNameForInnerType((Division e) => e.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DivisionId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.DivisionId">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.DivisionId">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
